@model Movie.BL.Models.FilmCategoriesDTO

<h2>Delete FilmCategory</h2>

<form asp-controller="FilmCategories" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div>
        <h4>Are you sure you want to delete this category?</h4>
        <h5>Id Film:</h5>
        <p>@Model.FilmsId</p>
        <h5>Category Id:</h5>
        <p>@Model.CategoriesId</p>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<form asp-controller="FilmCategories" asp-action="Index" method="post">
    <button type="submit" class="btn btn-danger">Return</button>
</form>