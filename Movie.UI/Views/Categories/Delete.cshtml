@model Movie.BL.Models.CategoriesDTO

<h2>Delete Category</h2>

<form asp-controller="Categories" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div>
        <h4>Are you sure you want to delete this category?</h4>
        <h5>Name:</h5>
        <p>@Model.Name</p>
        <h5>Parent Category Id:</h5>
        <p>@Model.ParentCategoryId</p>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<form asp-controller="Categories" asp-action="Index" method="post">
    <button type="submit" class="btn btn-danger">Return</button>
</form>